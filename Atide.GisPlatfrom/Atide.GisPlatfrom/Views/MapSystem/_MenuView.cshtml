    })

    function popDT() {      //弹出属性表

        require(["dijit/registry", "dojo/on", "dojo/domReady!"],
            function (registry, on) {

                var a = registry.byId("DTFloatingPane");

                a.show();
                a.bringToTop();

            });
       

    }

    function popQuerylayer() {

        require(["dijit/registry", "dojo/on", "dojo/domReady!"],
                        function (registry, on) {

                            var a = registry.byId("dFloatingPane");

                            a.show();
                            a.bringToTop();

                        });
        document.getElementById("TC2").style.display = 'none';
        document.getElementById("TC3").style.display = 'none';
        document.getElementById("TC4").style.display = 'none';

    }

    function switchTAB(index) {
        var q1 = document.getElementById("TC1");
        var q2 = document.getElementById("TC2");
        var q3 = document.getElementById("TC3");
        var q4 = document.getElementById("TC4");
        switch (index) {
            case 1: q1.style.display = 'block'; q2.style.display = 'none'; q3.style.display = 'none'; q4.style.display = 'none'; break;
            case 2: q1.style.display = 'none'; q2.style.display = 'block'; q3.style.display = 'none'; q4.style.display = 'none'; break;
            case 3: q1.style.display = 'none'; q2.style.display = 'none'; q3.style.display = 'block'; q4.style.display = 'none'; break;
            case 4: q1.style.display = 'none'; q2.style.display = 'none'; q3.style.display = 'none'; q4.style.display = 'block'; break;

        }

    }

    function popUserManage() {
        layer.open({
            type: 2,
            title: '用户管理',
            maxmin: true,
            area: ['800px', '500px'],
            content: '/MapSystem/UserView'
        });
    }

</script>

